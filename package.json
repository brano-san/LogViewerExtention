{
    "name": "jsonlogviewer",
    "displayName": "JsonLogViewer",
    "description": "Просмотр и фильтрация логов из json, с подсветкой уровней",
    "publisher": "branosan",
    "version": "1.0.4",
    "categories": [
        "Other"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/brano-san/LogViewerExtention"
    },
    "activationEvents": [
        "onCommand:logviewer.openLog",
        "onLanguage:logviewer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "logviewer.filterInclude",
                    "when": "editorHasSelection",
                    "group": "navigation"
                },
                {
                    "command": "logviewer.filterExclude",
                    "when": "editorHasSelection",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "logviewer.openLog",
                "title": "LogViewer: Open formatted log"
            },
            {
                "command": "logviewer.processCurrentFile",
                "title": "LogViewer: Format current .jsonlog file"
            },
            {
                "command": "logviewer.filterInclude",
                "title": "Filter Text By Selection"
            },
            {
                "command": "logviewer.filterExclude",
                "title": "Exclude Text By Selection"
            }
        ],
        "configuration": {
            "title": "LogViewer",
            "properties": {
                "logviewer.colorTrace": {
                    "type": "string",
                    "default": "rgba(255,255,255,0.05)",
                    "description": "Цвет подсветки для [T] (Trace)"
                },
                "logviewer.colorDebug": {
                    "type": "string",
                    "default": "rgba(25, 70, 120, 1)",
                    "description": "Цвет подсветки для [D] (Debug)"
                },
                "logviewer.colorInfo": {
                    "type": "string",
                    "default": "rgba(0,255,0,0.1)",
                    "description": "Цвет подсветки для [I] (Info)"
                },
                "logviewer.colorWarn": {
                    "type": "string",
                    "default": "rgba(246, 255, 169, 0.5)",
                    "description": "Цвет подсветки для [W] (Warning)"
                },
                "logviewer.colorError": {
                    "type": "string",
                    "default": "rgba(176,55,66,0.2)",
                    "description": "Цвет подсветки для [E] (Error)"
                },
                "logviewer.colorCritical": {
                    "type": "string",
                    "default": "rgba(197,15,31,0.2)",
                    "description": "Цвет подсветки для [C] (Critical)"
                }
            }
        },
        "languages": [
            {
                "id": "logviewer",
                "aliases": [
                    "LogViewer"
                ],
                "extensions": [
                    ".jsonlog",
                    ".json"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^14.14.0",
        "@types/vscode": "^1.78.0",
        "typescript": "^4.5.0",
        "vscode-test": "^1.6.1"
    },
    "files.associations": {
        "*.jsonlog": "logviewer"
    }
}